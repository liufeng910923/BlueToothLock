<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lncosie.ilandroidos">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <uses-permission android:name="android.permission.USE_FINGERPRINT" />

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/hutlon0"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.AppActivity"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.UserViewDetailActivity"
            android:label="@string/title_activity_user_view_detail"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.UserAddActivity"
            android:label="@string/title_activity_user_view_detail"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden" />
        <!-- android:theme="@style/AppTheme" -->
        <!-- android:windowSoftInputMode="adjustPan|stateAlwaysHidden" -->
        <activity
            android:name=".view.SetupDescriptionActivity"
            android:label="@string/title_activity_setup"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.SetupPasswordActivity"
            android:label="@string/title_activity_setup_desc"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.AboutActivity"
            android:label="@string/title_activity_about"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.PatternActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme" >

        </activity>
        <activity
            android:name=".view.PatternSettingActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme" >

        </activity>

        <activity
            android:name=".view.TestActivity"
            android:label="@string/title_activity_test"
            android:windowSoftInputMode="adjustResize">

        </activity>
    </application>

</manifest>
