<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.lncosie.ilandroidos.view.DeviceSelectorFragment">

    <include layout="@layout/window_head"></include>

    <TextView
        android:id="@+id/tip"
        style="@style/TextAppearance.AppCompat.Display1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_small"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/padding_normal"
        android:text="@string/reset_password_tip"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/password"
        style="@style/InputPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:hint="@string/password_input"
        android:textSize="@dimen/text_detail" />

    <LinearLayout
        style="@style/FrameLayoutWhite"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="@dimen/item_height"
            android:layout_height="@dimen/item_height_small"
            android:layout_marginRight="@dimen/padding_normal"
            android:background="@drawable/clickable_frame"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/ok"
            android:layout_width="@dimen/item_height"
            android:layout_height="@dimen/item_height_small"
            android:layout_marginRight="@dimen/padding_normal"
            android:background="@drawable/clickable_frame"
            android:gravity="center"
            android:text="@string/ok"
            android:textColor="@color/colorAccent" />
    </LinearLayout>
</LinearLayout>
