<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.lncosie.ilandroidos.view.DeviceSelectorFragment">

    <TextView
        android:id="@+id/window_title"
        style="@style/PreferencePageTitle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="@dimen/frame_padding">

        <EditText
            android:id="@+id/password"
            style="@style/InputPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/password_input" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="@dimen/frame_padding">

        <EditText
            android:id="@+id/password_re"
            style="@style/InputPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/password_input_re" />
    </android.support.design.widget.TextInputLayout>
</LinearLayout>
